<package-database xmlns="http://marklogic.com/manage/package/databases">
  <config>
    <package-database-properties>
      <word-lexicons>
        <word-lexicon>http://marklogic.com/collation/</word-lexicon>
      </word-lexicons>
      <range-element-indexes>
        <range-element-index>
          <scalar-type>dateTime</scalar-type>
          <collation />
          <namespace-uri>http://marklogic.com/test</namespace-uri>
          <localname>secondTestDateTime</localname>
          <range-value-positions>false</range-value-positions>
          <invalid-values>reject</invalid-values>
        </range-element-index>
      </range-element-indexes>
      <range-field-indexes>
        <range-field-index>
          <scalar-type>string</scalar-type>
          <field-name>secondField</field-name>
          <collation />
          <range-value-positions>false</range-value-positions>
          <invalid-values>ignore</invalid-values>
        </range-field-index>
      </range-field-indexes>
      <fields>
        <field>
          <field-name>secondField</field-name>
          <field-path>
            <path>/some/other/element</path>
            <weight>1</weight>
          </field-path>
          <word-lexicons />
          <included-elements />
          <excluded-elements />
        </field>
      </fields>
    </package-database-properties>
    <links>
      <security-database>my-security-database</security-database>
    </links>
  </config>
</package-database>

